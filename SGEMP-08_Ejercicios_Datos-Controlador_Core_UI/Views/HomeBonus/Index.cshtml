@model SGEMP_08_Ejercicios_Datos_Controlador_Core_UI.Models.clsIndexVM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <form method="post">
        <select name="nombrePlanta">
            @foreach (String nombrePlanta in Model.Nombres)
            {
                <option>@nombrePlanta</option>
            }
        </select>
        <div>@Model.Descripcion</div>
        <input type="submit" value="Ver Detalles" />

    </form>
</body>
</html>
